<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.administrator.smartbutler"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 读取Log -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 闪屏页 -->
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoActionBarFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 主页 -->
        <activity android:name=".MainActivity">
        </activity>
        <!-- 设置 -->
        <activity
            android:name=".ui.SettingActivity"
            android:label="@string/setting">
        </activity>
        <!-- 引导页 -->
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/NoActionBarFullscreen">
        </activity>
        <!-- 登录 -->
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/login">
        </activity>
        <!-- 注册 -->
        <activity
            android:name=".ui.RegisteredActivity"
            android:label="@string/registered">
        </activity>
        <activity android:name=".ui.ForgetPasswordActivity"
            android:label="@string/forget_password">
        </activity>
        <activity android:name=".ui.CourierActivity"
            android:label="@string/logistics_query"/>
        <activity android:name=".ui.PhoneActivity"
                  android:label="@string/attribution_query"/>
        <!--新闻详情-->
        <activity android:name=".ui.WebViewActivity"/>
    </application>

</manifest>